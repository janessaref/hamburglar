<div class="container">

<img src="https://www.flaticon.com/svg/static/icons/svg/883/883517.svg" alt="hamburger icon" style="width: 300px; display:block; margin: 0 auto;">
<h1>Welcome to the Good Burger!</h1>

<div class="row-md-12">
    <center>
    <div class="col-md-6 burgerBox card float-left">
        <div class="card body">
            <h3>burger waiting to be eaten!</h3>
            <div class="input group">
                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                            {{> burgers/burger-block devoured=true}}
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6 burgerEatBox card">
        <div class="card body">
            <h3>ORM ORM ORM YUM BURGER!</h3>
            <ul>
                {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    </center>
</div>
    <h2>Add a burger to the menu!</h2>
<div class="row-md-12"> 
        <form action="/api/burgers" method="POST" class="create-form">
            <div class="form-group">
                <textarea type="text" id="burg" name="burger_name"></textarea>
            </div>
            <button type="submit">Add burger</button>
        </form>
    </div>
</div>

